{{#partial "content"}}
    <div class="col-md-4">

    </div>

    <div class="col-md-8">
        <h1 class="text-primary">Sightings</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Category</th>
                <th scope="col">Name</th>
                <th scope="col">Location</th>
                <th scope="col">Health</th>
                <th scope="col">Age</th>
                <th scope="col">Ranger Name</th>
            </tr>
            </thead>
        <tbody>
        {{#if sightings}}
                {{#each sightings}}
                    <tr>
                        <td>{{category}}</td>
                        <td>{{name}}</td>
                        <td>{{location}}</td>
                        <td>later</td>
                        <td>Later</td>
                        <td>{{rangername}}</td>
                    </tr>

                {{/each}}
        {{else}}
            <p>No sightings yet</p>
        {{/if}}
        </tbody>
        </table>
    </div>
{{/partial}}

{{> layout.hbs}}